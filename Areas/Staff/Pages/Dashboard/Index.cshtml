@page
@model project_pharmacie.Areas.Staff.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Staff Dashboard";
}
 

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">

    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Dashboard (Staff)</h1>
            <p class="text-sm text-gray-600">Aperçu rapide du stock (données mockées pour l’instant).</p>
        </div>

        <div class="flex gap-2">
            <a href="/Staff/Products" class="inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800">
                Produits
            </a>
            <a href="/Staff/Orders/Create" class="inline-flex items-center rounded-lg bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700">
                Passer commande
            </a>
        </div>
    </div>
    <div class="p-6 bg-emerald-200 rounded-xl text-emerald-900">
        Tailwind works ✅
    </div>

    <!-- KPIs -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Total produits</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.KpiTotalProducts</p>
        </div>

        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Produits en alerte</p>
            <p class="mt-2 text-2xl font-semibold text-amber-600">@Model.KpiLowStockCount</p>
            <p class="mt-1 text-xs text-gray-500">stock ≤ seuil</p>
        </div>

        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Unités en stock</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.KpiTotalUnits</p>
        </div>

        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Valeur stock (MAD)</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.KpiStockValueMad.ToString("N2")</p>
        </div>
    </div>

    <!-- Low stock table -->
    <div class="rounded-xl border border-gray-200 bg-white shadow-sm">
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
            <div>
                <h2 class="text-base font-semibold text-gray-900">Produits en rupture / alerte</h2>
                <p class="text-sm text-gray-600">Liste des produits à surveiller.</p>
            </div>
            <a href="/Staff/Products" class="text-sm font-medium text-emerald-700 hover:text-emerald-800">
                Voir tous les produits →
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Produit</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Catégorie</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Stock</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Seuil</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (Model.LowStockProducts.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">
                                Aucun produit en alerte 🎉
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model.LowStockProducts)
                        {
                            var badge =
                            p.Stock == 0
                            ? "bg-red-50 text-red-700 ring-red-200"
                            : "bg-amber-50 text-amber-700 ring-amber-200";

                            var label = p.Stock == 0 ? "Rupture" : "Alerte";

                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm font-medium text-gray-900">@p.Name</td>
                                <td class="px-4 py-3 text-sm text-gray-700">@p.Category</td>
                                <td class="px-4 py-3 text-sm text-gray-700">
                                    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset @badge">
                                        @label • @p.Stock
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-700">@p.ReorderLevel</td>
                                <td class="px-4 py-3 text-right">
                                    <a href="/Staff/Orders/Create?supplierHint=@p.SupplierHint"
                                       class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-100">
                                        Commander
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
