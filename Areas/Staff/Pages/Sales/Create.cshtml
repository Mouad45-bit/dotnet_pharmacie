@page
@model project_pharmacie.Areas.Staff.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Nouvelle Vente";
}

<div class="mx-auto max-w-3xl px-4 py-6">
    <!-- Header -->
    <div class="mb-6 flex items-start justify-between gap-3">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">Ajouter une vente</h1>
            <p class="text-sm text-zinc-500">Enregistrer une nouvelle transaction.</p>
        </div>

        <a asp-area="Staff" asp-page="/Sales/History"
           class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
            ← Retour
        </a>
    </div>

    <partial name="/Areas/Admin/Pages/Shared/_Flash.cshtml" />

    <div class="rounded-2xl border bg-white p-5">
        <form method="post" class="space-y-5">

            <div>
                <label class="mb-1 block text-sm font-medium">Client</label>
                <input asp-for="NewSale.CustomerName" autocomplete="name"
                       placeholder="Ex: Jean Dupont"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Nom du client sur le ticket.</p>
                <span asp-validation-for="NewSale.CustomerName" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium">Médicament</label>
                <input asp-for="NewSale.DrugName" autocomplete="off"
                       placeholder="Ex: Doliprane 1g"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Nom du produit vendu.</p>
                <span asp-validation-for="NewSale.DrugName" class="text-sm text-red-600"></span>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-1 block text-sm font-medium">Quantité</label>
                    <input asp-for="NewSale.Quantity" type="number" min="1"
                           placeholder="Ex: 2"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Nombre d’unités vendues.</p>
                    <span asp-validation-for="NewSale.Quantity" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label class="mb-1 block text-sm font-medium">Prix total</label>
                    <input asp-for="NewSale.TotalPrice" type="number" step="0.01" min="0"
                           placeholder="Ex: 120.00"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Montant total de la vente.</p>
                    <span asp-validation-for="NewSale.TotalPrice" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
                <a asp-area="Staff" asp-page="/Sales/History"
                   class="rounded-xl px-4 py-2 text-sm text-zinc-700 hover:bg-zinc-50">
                    Annuler
                </a>
                <button class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    Enregistrer
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}