@page
@model project_pharmacie.Areas.Staff.Pages.Sales.HistoryModel
@{
    ViewData["Title"] = "Historique des Ventes";
}

<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-2xl font-bold text-slate-900">Historique des ventes</h1>
        <p class="text-slate-500 text-sm mt-1">Liste simple des transactions récentes.</p>
    </div>
    <a asp-page="./Create" class="bg-slate-900 hover:bg-slate-800 text-white text-sm font-medium py-2.5 px-6 rounded-full shadow-sm transition-all flex items-center gap-2">
        + Nouvelle Vente
    </a>
</div>

<div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
    <table class="w-full text-left border-collapse">
        <thead>
            <tr class="border-b border-slate-100">
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide">Date</th>
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide">Client</th>
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide">Médicament</th>
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide">Total</th>
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide text-center">Statut</th>
                <th class="p-5 text-xs font-semibold text-slate-500 uppercase tracking-wide text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-50">
            @foreach (var sale in Model.Sales)
            {
                <tr class="hover:bg-slate-50/50 transition-colors">
                    <td class="p-5 text-sm text-slate-900 font-medium">
                        @sale.Date.ToString("dd/MM/yyyy")
                        <span class="block text-xs text-slate-400 font-normal">@sale.Date.ToString("HH:mm")</span>
                    </td>
                    <td class="p-5 text-sm text-slate-600">
                        @sale.CustomerName
                    </td>
                    <td class="p-5 text-sm text-slate-600">
                        <span class="font-medium text-slate-900">@sale.DrugName</span>
                        <span class="text-slate-400 text-xs ml-1">x @sale.Quantity</span>
                    </td>
                    <td class="p-5 text-sm font-bold text-slate-900">
                        @sale.TotalPrice.ToString("C")
                    </td>
                    <td class="p-5 text-center">
                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-50 text-emerald-600 border border-emerald-100">
                            Payé
                        </span>
                    </td>
                    <td class="p-5 text-right space-x-2">
                        <button class="text-xs font-medium text-slate-500 hover:text-slate-900 bg-white border border-slate-200 hover:border-slate-300 px-3 py-1 rounded-full transition-all">
                            Modifier
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Sales.Any())
    {
        <div class="p-12 text-center">
            <p class="text-slate-400 text-sm">Aucune donnée disponible.</p>
        </div>
    }
</div>