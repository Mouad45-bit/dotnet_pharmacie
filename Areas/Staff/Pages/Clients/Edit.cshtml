@page "{id:int}"
@model project_pharmacie.Areas.Staff.Pages.Clients.EditModel
@{
    ViewData["Title"] = "Dossier Client";
}

<div class="max-w-5xl mx-auto mt-8">

    <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-4">
            <a asp-page="./Index" class="h-10 w-10 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-500 hover:bg-slate-50 transition shadow-sm">
                ←
            </a>
            <div>
                <h1 class="text-2xl font-bold text-slate-900">@Model.Client.Name</h1>
                <p class="text-slate-500 text-sm">Gestion du dossier et fidélité</p>
            </div>
        </div>
        <div class="px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-bold shadow-md">
            Statut : @Model.Client.Status
        </div>
    </div>

    <form method="post" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200">
                <h2 class="text-lg font-bold text-slate-800 mb-6 flex items-center gap-2">
                    📄 Informations Personnelles
                </h2>

                <div class="space-y-5">
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Nom Complet</label>
                        <input asp-for="Client.Name" class="w-full p-3 rounded-lg border border-slate-200 bg-slate-50 text-slate-900 font-medium focus:bg-white focus:ring-2 focus:ring-slate-900 outline-none transition" />
                    </div>

                    <div class="grid grid-cols-2 gap-5">
                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Email</label>
                            <input asp-for="Client.Email" class="w-full p-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-slate-900 outline-none transition" />
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Téléphone</label>
                            <input asp-for="Client.Phone" class="w-full p-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-slate-900 outline-none transition" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all w-full md:w-auto">
                    💾 Enregistrer les modifications
                </button>
            </div>
        </div>

        <div class="lg:col-span-1 space-y-6">

            <div class="bg-slate-900 rounded-2xl p-6 text-white shadow-xl relative overflow-hidden group">
                <div class="absolute top-0 right-0 -mr-8 -mt-8 w-32 h-32 rounded-full bg-white opacity-5"></div>

                <h3 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Solde Points</h3>

                <div class="flex items-baseline gap-1 mt-2 mb-6">
                    <input asp-for="Client.LoyaltyPoints" type="number" class="bg-transparent text-5xl font-bold text-white w-full outline-none border-b border-slate-700 focus:border-white transition-colors p-0" />
                    <span class="text-slate-400 font-medium">pts</span>
                </div>

                <div class="flex items-center gap-3 text-sm text-slate-300 bg-slate-800 p-3 rounded-lg border border-slate-700">
                    <span>🏆 Prochain palier : <strong>500 pts</strong></span>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-emerald-100 relative">
                <div class="absolute top-0 left-0 w-1 h-full bg-emerald-500 rounded-l-2xl"></div>

                <h3 class="text-emerald-800 font-bold mb-3 flex items-center gap-2">
                    🎁 Offre Spéciale
                </h3>

                <textarea asp-for="Client.PersonalizedOffer" rows="4" class="w-full p-3 rounded-lg border border-emerald-100 bg-emerald-50 text-emerald-900 text-sm focus:ring-2 focus:ring-emerald-500 outline-none resize-none placeholder-emerald-300" placeholder="Écrivez une offre ici... (Ex: -10% sur tout le magasin)"></textarea>

                <p class="text-xs text-emerald-600 mt-2 flex items-center gap-1">
                    ℹ️ Visible sur l'application du client.
                </p>
            </div>
        </div>
    </form>
</div>