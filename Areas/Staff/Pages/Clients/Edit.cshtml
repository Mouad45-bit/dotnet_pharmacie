@page "{id:int}"
@model project_pharmacie.Areas.Staff.Pages.Clients.EditModel
@{
    ViewData["Title"] = "Modifier Client";
}

<div class="mx-auto max-w-3xl px-4 py-6">
    <!-- Header -->
    <div class="mb-6 flex items-start justify-between gap-3">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">Modifier un client</h1>
            <p class="text-sm text-zinc-500">Mettre à jour les informations du dossier.</p>
        </div>

        <a href="#"
           onclick="history.back(); return false;"
           class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
            ← Retour
        </a>
    </div>

    <partial name="/Areas/Admin/Pages/Shared/_Flash.cshtml" />

    <div class="rounded-2xl border bg-white p-5">
        <form method="post" class="space-y-5">

            <div>
                <label class="mb-1 block text-sm font-medium">Nom complet</label>
                <input asp-for="Client.Name" autocomplete="name"
                       placeholder="Ex: Jean Dupont"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Nom affiché dans le fichier clients.</p>
                <span asp-validation-for="Client.Name" class="text-sm text-red-600"></span>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-1 block text-sm font-medium">Email</label>
                    <input asp-for="Client.Email" type="email" autocomplete="email"
                           placeholder="ex: client@exemple.ma"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Doit être valide.</p>
                    <span asp-validation-for="Client.Email" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label class="mb-1 block text-sm font-medium">Téléphone (optionnel)</label>
                    <input asp-for="Client.Phone" type="tel" autocomplete="tel"
                           placeholder="Ex: 06 12 34 56 78"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Format libre (Maroc: 06/07…).</p>
                    <span asp-validation-for="Client.Phone" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-1 block text-sm font-medium">Points de fidélité</label>
                    <input asp-for="Client.LoyaltyPoints" type="number" min="0"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Le statut sera recalculé à l’enregistrement.</p>
                    <span asp-validation-for="Client.LoyaltyPoints" class="text-sm text-red-600"></span>
                </div>

                <div class="flex items-end justify-between rounded-2xl border bg-zinc-50 p-4">
                    <div>
                        <p class="text-sm font-medium">Statut client</p>
                        <p class="text-xs text-zinc-500">Déduit des points de fidélité.</p>
                    </div>

                    <span class="rounded-full bg-white px-3 py-1 text-sm font-medium text-zinc-900 border">
                        @Model.Client.Status
                    </span>
                </div>
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium">Offre personnalisée (optionnel)</label>
                <textarea asp-for="Client.PersonalizedOffer" rows="4"
                          placeholder="Ex: -10% sur la parapharmacie"
                          class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200"></textarea>
                <p class="mt-1 text-xs text-zinc-500">Visible dans le dossier client.</p>
                <span asp-validation-for="Client.PersonalizedOffer" class="text-sm text-red-600"></span>
            </div>

            <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
                <a asp-area="Staff" asp-page="/Clients/Index"
                   class="rounded-xl px-4 py-2 text-sm text-zinc-700 hover:bg-zinc-50">
                    Annuler
                </a>
                <button class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    Enregistrer
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}