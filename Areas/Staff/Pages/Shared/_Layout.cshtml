<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Secteur C</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-slate-50 text-slate-900 font-sans">

    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">

            <div class="flex items-center gap-3">
                <div class="bg-slate-900 text-white font-bold h-9 w-9 flex items-center justify-center rounded-lg">C</div>
                <span class="font-bold text-lg tracking-tight">Secteur C</span>
            </div>

            <nav class="flex items-center gap-8">
                <a asp-area="Staff" asp-page="/Sales/History" class="text-sm font-medium text-slate-500 hover:text-slate-900 transition-colors">
                    Ventes
                </a>
                <a asp-area="Staff" asp-page="/Clients/Index" class="text-sm font-medium text-slate-500 hover:text-slate-900 transition-colors">
                    Clients
                </a>
                <a asp-area="Staff" asp-page="/Profile/Index" class="text-sm font-medium text-slate-500 hover:text-slate-900 transition-colors">
                    Profil
                </a>
            </nav>

            <div>
                <span class="text-xs font-bold text-slate-300 border border-slate-200 px-2 py-1 rounded">STAFF</span>
            </div>
        </div>
    </header>

    <main class="max-w-7xl mx-auto p-6">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>