@page
@model project_pharmacie.Areas.Staff.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Mon Profil";
}

<div class="max-w-4xl mx-auto mt-10">

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="mb-6 p-4 bg-green-100 text-green-700 rounded-lg border border-green-200 shadow-sm">
            ✅ @Model.Message
        </div>
    }

    <h1 class="text-3xl font-bold text-slate-900 mb-2">Mon Profil</h1>
    <p class="text-slate-500 mb-8">Gérez vos informations personnelles et votre sécurité.</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

        <div class="md:col-span-1">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 text-center">
                <div class="w-24 h-24 bg-slate-900 text-white rounded-full flex items-center justify-center text-3xl font-bold mx-auto mb-4">
                    @Model.Username.Substring(0, 1)
                </div>
                <h2 class="text-xl font-bold text-slate-900">@Model.Username</h2>
                <span class="inline-block mt-2 px-3 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-full">
                    @Model.Role
                </span>
                <p class="text-slate-400 text-sm mt-4">ID: @Model.EmployeeId</p>
            </div>
        </div>

        <div class="md:col-span-2">
            <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200">
                <h3 class="text-lg font-bold text-slate-900 mb-6 border-b pb-2">Sécurité du compte</h3>

                <form method="post" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Email professionnel</label>
                        <input type="text" value="@Model.Email" disabled class="w-full p-3 rounded-lg bg-slate-100 text-slate-500 border border-slate-200 cursor-not-allowed" />
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Mot de passe actuel</label>
                            <input asp-for="CurrentPassword" type="password" class="w-full p-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-slate-900 outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Nouveau mot de passe</label>
                            <input asp-for="NewPassword" type="password" class="w-full p-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-slate-900 outline-none" />
                        </div>
                    </div>

                    <div class="pt-4 text-right">
                        <button type="submit" class="bg-slate-900 text-white font-bold py-3 px-6 rounded-lg hover:bg-slate-800 transition shadow-lg">
                            Mettre à jour
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>