@page
@model project_pharmacie.Areas.Staff.Pages.Suppliers.IndexModel
@{
    ViewData["Title"] = "Fournisseurs";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">

    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Fournisseurs</h1>
            <p class="text-sm text-gray-600">
                Tri par note + moyenne. Données mockées (prêtes pour DB/service).
            </p>
        </div>

        <div class="flex gap-2">
            <a href="/Staff/Dashboard"
               class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100">
                ← Dashboard
            </a>

            <a href="/Staff/Orders/Create"
               class="inline-flex items-center rounded-lg bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700">
                Passer commande
            </a>
        </div>
    </div>

    <!-- Summary -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Total fournisseurs</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.TotalSuppliers</p>
        </div>

        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Note moyenne</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.AverageRating.ToString("N1") / 5</p>
            <p class="mt-1 text-xs text-gray-500">basée sur @Model.TotalRatingsCount évaluations</p>
        </div>

        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">Meilleur fournisseur</p>
            <p class="mt-2 text-2xl font-semibold text-gray-900">@Model.BestSupplierName</p>
            <p class="mt-1 text-xs text-gray-500">@Model.BestSupplierRating.ToString("N1") / 5</p>
        </div>
    </div>

    <!-- Sort controls -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
            <div>
                <h2 class="text-base font-semibold text-gray-900">Liste</h2>
                <p class="text-sm text-gray-600">Trie la liste pour choisir rapidement le meilleur fournisseur.</p>
            </div>

            <div class="flex flex-wrap gap-2">
                @{
                    string Btn(string sort, string label)
                    {
                        var active = string.Equals(Model.Sort, sort, System.StringComparison.OrdinalIgnoreCase);
                        return active
                        ? "rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white hover:bg-gray-800"
                        : "rounded-lg border border-gray-200 bg-white px-3 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100";
                    }
                }

                <a href="/Staff/Suppliers?sort=rating_desc" class="@Btn("rating_desc", "Note ↓")">Note ↓</a>
                <a href="/Staff/Suppliers?sort=rating_asc" class="@Btn("rating_asc", "Note ↑")">Note ↑</a>
                <a href="/Staff/Suppliers?sort=name" class="@Btn("name", "Nom A→Z")">Nom A→Z</a>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="rounded-xl border border-gray-200 bg-white shadow-sm overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Fournisseur</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Téléphone</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Note</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Nb avis</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Statut</th>
                    <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Actions</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-gray-200">
                @foreach (var s in Model.Rows)
                {
                    var (badgeCls, badgeText) = Model.GetRatingBadge(s.Rating);

                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm font-medium text-gray-900">@s.Name</td>
                        <td class="px-4 py-3 text-sm text-gray-700">@s.Phone</td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset @badgeCls">
                                @badgeText • @s.Rating.ToString("N1")/5
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700">@s.RatingsCount</td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @if (s.IsPreferred)
                            {
                                <span class="inline-flex items-center rounded-full bg-emerald-50 px-2 py-1 text-xs font-medium text-emerald-700 ring-1 ring-inset ring-emerald-200">
                                    Préféré
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-700 ring-1 ring-inset ring-gray-200">
                                    Standard
                                </span>
                            }
                        </td>
                        <td class="px-4 py-3 text-right">
                            <a href="/Staff/Orders/Create?supplierId=@s.Id"
                               class="inline-flex items-center rounded-lg bg-emerald-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-emerald-700">
                                Commander
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
