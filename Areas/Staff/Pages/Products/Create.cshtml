@page
@model project_pharmacie.Areas.Staff.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Nouveau Produit";
}

<div class="mx-auto max-w-3xl px-4 py-6">
    <!-- Header -->
    <div class="mb-6 flex items-start justify-between gap-3">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">Ajouter un produit</h1>
            <p class="text-sm text-zinc-500">Créer une nouvelle fiche produit.</p>
        </div>

        <a asp-area="Staff" asp-page="/Products/Index"
           class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
            ← Retour
        </a>
    </div>

    <partial name="/Areas/Admin/Pages/Shared/_Flash.cshtml" />

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mb-4 rounded-xl border border-red-200 bg-red-50 p-4 text-sm text-red-800">
            @Model.ErrorMessage
        </div>
    }

    <div class="rounded-2xl border bg-white p-5">
        <form method="post" class="space-y-5">

            <!-- Référence (PK) -->
            <div>
                <label class="mb-1 block text-sm font-medium">Référence</label>
                <input asp-for="Produit.Reference" autocomplete="off"
                       placeholder="Ex: REF-DOLO-1G"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Identifiant unique du produit (clé primaire).</p>
                <span asp-validation-for="Produit.Reference" class="text-sm text-red-600"></span>
            </div>

            <!-- Nom -->
            <div>
                <label class="mb-1 block text-sm font-medium">Nom</label>
                <input asp-for="Produit.Nom" autocomplete="off"
                       placeholder="Ex: Doliprane 1g"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Nom affiché dans la liste des produits.</p>
                <span asp-validation-for="Produit.Nom" class="text-sm text-red-600"></span>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <!-- Prix -->
                <div>
                    <label class="mb-1 block text-sm font-medium">Prix (MAD)</label>
                    <input asp-for="Produit.Prix" type="number" step="0.01" min="0"
                           placeholder="Ex: 18.50"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Prix de vente unitaire.</p>
                    <span asp-validation-for="Produit.Prix" class="text-sm text-red-600"></span>
                </div>

                <!-- Quantité -->
                <div>
                    <label class="mb-1 block text-sm font-medium">Stock</label>
                    <input asp-for="Produit.Quantite" type="number" min="0"
                           placeholder="Ex: 0"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <p class="mt-1 text-xs text-zinc-500">Quantité disponible en magasin.</p>
                    <span asp-validation-for="Produit.Quantite" class="text-sm text-red-600"></span>
                </div>
            </div>

            <!-- Date de péremption (optionnel) -->
            <div>
                <label class="mb-1 block text-sm font-medium">Date de péremption (optionnel)</label>
                <input asp-for="Produit.DatePeremption" type="date"
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                <p class="mt-1 text-xs text-zinc-500">Laisse vide si non applicable.</p>
                <span asp-validation-for="Produit.DatePeremption" class="text-sm text-red-600"></span>
            </div>

            <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
                <a asp-area="Staff" asp-page="/Products/Index"
                   class="rounded-xl px-4 py-2 text-sm text-zinc-700 hover:bg-zinc-50">
                    Annuler
                </a>
                <button class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    Enregistrer
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}