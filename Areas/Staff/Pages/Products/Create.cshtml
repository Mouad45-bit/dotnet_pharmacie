@page
@model project_pharmacie.Areas.Staff.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Ajouter produit";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Ajouter un produit</h1>
            <p class="text-sm text-gray-600">Formulaire propre (mock) — prêt à brancher sur DB/service.</p>
        </div>

        <a href="/Staff/Products"
           class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100">
            ? Retour
        </a>
    </div>

    @* Alert simple *@
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    <form method="post" class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm space-y-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Nom</label>
                <input asp-for="Form.Name"
                       class="mt-1 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Form.Name" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Catégorie</label>
                <input asp-for="Form.Category"
                       class="mt-1 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Form.Category" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Prix (MAD)</label>
                <input asp-for="Form.UnitPrice" type="number" step="0.01"
                       class="mt-1 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Form.UnitPrice" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Stock</label>
                <input asp-for="Form.Stock" type="number" min="0"
                       class="mt-1 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Form.Stock" class="text-xs text-red-600"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Seuil d’alerte</label>
                <input asp-for="Form.ReorderLevel" type="number" min="0"
                       class="mt-1 w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                <span asp-validation-for="Form.ReorderLevel" class="text-xs text-red-600"></span>
            </div>
        </div>

        <div class="flex items-center justify-end gap-2 pt-2">
            <a href="/Staff/Products"
               class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100">
                Annuler
            </a>

            <button type="submit"
                    class="inline-flex items-center rounded-lg bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700">
                Enregistrer
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
