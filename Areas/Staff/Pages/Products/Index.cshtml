@page
@model project_pharmacie.Areas.Staff.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Produits";
}

<div class="mx-auto max-w-6xl px-4 py-6">

    <div class="mb-2 flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">
                Gestion des produits
            </h1>
        </div>

        <div class="flex gap-2">
            <a asp-area="Staff" asp-page="/Dashboard/Index"
               class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
                ← Dashboard
            </a>

            <a asp-area="Staff" asp-page="/Products/Create"
               class="inline-flex items-center justify-center rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                + Ajouter produit
            </a>
        </div>
    </div>

    <p class="mb-6 text-sm text-zinc-500">
        @(Model.Rows?.Count ?? 0) résultat(s)
        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            <span> pour “@Model.Query”</span>
        }
    </p>

    <partial name="/Areas/Admin/Pages/Shared/_Flash.cshtml" />

    @if (TempData["Toast.Success"] is string toast && !string.IsNullOrWhiteSpace(toast))
    {
        <div class="mb-4 rounded-2xl border border-emerald-200 bg-emerald-50 p-4 text-sm text-emerald-800">
            @toast
        </div>
    }

    <!-- Barre de recherche -->
    <div class="mb-4 rounded-2xl border bg-white p-4">
        <form method="get" class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="flex-1">
                <label class="mb-1 block text-xs font-medium text-zinc-600">Recherche</label>
                <input name="q" value="@Model.Query"
                       placeholder="Nom ou catégorie..."
                       class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
            </div>

            <div class="flex gap-2 sm:pt-5">
                <button type="submit"
                        class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    Rechercher
                </button>

                <a asp-area="Staff" asp-page="/Products/Index"
                   class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
                    Réinitialiser
                </a>
            </div>
        </form>
    </div>

    @if (Model.Rows == null || Model.Rows.Count == 0)
    {
        <!-- Empty state -->
        <div class="rounded-2xl border bg-white p-10 text-center">
            <p class="text-base font-semibold">Aucun produit trouvé</p>
            <p class="mt-1 text-sm text-zinc-500">
                Essaie une autre recherche ou ajoute un nouveau produit.
            </p>
            <div class="mt-4">
                <a asp-area="Staff" asp-page="/Products/Create"
                   class="inline-flex items-center justify-center rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    + Ajouter produit
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="overflow-hidden rounded-2xl border bg-white">
            <table class="min-w-full text-left text-sm">
                <thead class="bg-zinc-50 text-zinc-600">
                    <tr>
                        <th class="px-4 py-3 font-medium">Nom</th>
                        <th class="px-4 py-3 font-medium">Catégorie</th>
                        <th class="px-4 py-3 font-medium">Prix</th>
                        <th class="px-4 py-3 font-medium">Stock</th>
                        <th class="px-4 py-3 font-medium">Seuil</th>
                        <th class="px-4 py-3 font-medium text-right">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y">
                    @foreach (var p in Model.Rows)
                    {
                        var (badgeCls, badgeText) = Model.GetStockBadge(p.Stock, p.ReorderLevel);

                        <tr class="hover:bg-zinc-50/50">
                            <td class="px-4 py-3">
                                <span class="font-medium text-zinc-900">@p.Name</span>
                            </td>

                            <td class="px-4 py-3 text-zinc-700">@p.Category</td>

                            <td class="px-4 py-3 text-zinc-700">@p.UnitPrice.ToString("N2") MAD</td>

                            <td class="px-4 py-3">
                                <span class="rounded-full px-2 py-1 text-xs font-medium @badgeCls">
                                    @badgeText • @p.Stock
                                </span>
                            </td>

                            <td class="px-4 py-3 text-zinc-700">@p.ReorderLevel</td>

                            <td class="px-4 py-3 text-right">
                                <div class="flex justify-end gap-2">

                                    <!-- Modifier -->
                                    <a asp-area="Staff" asp-page="/Products/Edit" asp-route-id="@p.Id"
                                       class="rounded-xl border bg-white px-3 py-1.5 text-sm hover:bg-zinc-50">
                                        Modifier
                                    </a>

                                    <!-- Supprimer -->
                                    <form method="post" asp-page-handler="Delete" class="inline">
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <input type="hidden" name="q" value="@Model.Query" />

                                        <button type="submit"
                                                class="rounded-xl border border-red-200 bg-red-50 px-3 py-1.5 text-sm text-red-700 hover:bg-red-100"
                                                onclick="return confirm('Confirmer la suppression de @p.Name ?');">
                                            Supprimer
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }

</div>