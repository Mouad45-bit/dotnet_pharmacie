@page
@model project_pharmacie.Areas.Staff.Pages.IndexModel
@{
    ViewData["Title"] = "Espace Vente";
}

<div class="mx-auto max-w-6xl space-y-8">

    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-zinc-900">Tableau de bord</h1>
            <p class="mt-1 text-zinc-500">Bienvenue, <span class="font-medium text-zinc-900">@User.Identity?.Name</span></p>
        </div>
        <span class="rounded-full bg-blue-50 px-3 py-1 text-xs font-medium text-blue-700 border border-blue-100">
            ESPACE PERSONNEL
        </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <a asp-page="/Sales/Index" class="group relative overflow-hidden rounded-3xl bg-slate-900 p-8 shadow-md transition-transform hover:scale-[1.01]">
            <div class="relative z-10">
                <h3 class="text-lg font-semibold text-white">Ventes</h3>
                <p class="mt-2 text-sm text-slate-400">Accéder au terminal de vente (POS).</p>
            </div>
            <div class="absolute -bottom-4 -right-4 text-slate-800 opacity-50">
                <svg class="h-32 w-32" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
        </a>

        <a asp-page="/Products/Index" class="rounded-3xl border border-zinc-100 bg-white p-8 shadow-sm hover:border-zinc-300 transition-colors">
            <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-emerald-50 text-emerald-600 rounded-2xl">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
                </div>
                <h3 class="text-lg font-semibold text-zinc-900">Produits</h3>
            </div>
            <p class="text-sm text-zinc-500">Consulter le stock et les prix.</p>
        </a>

        <a asp-page="/Clients/Index" class="rounded-3xl border border-zinc-100 bg-white p-8 shadow-sm hover:border-zinc-300 transition-colors">
            <div class="flex items-center gap-4 mb-4">
                <div class="p-3 bg-purple-50 text-purple-600 rounded-2xl">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h3 class="text-lg font-semibold text-zinc-900">Clients</h3>
            </div>
            <p class="text-sm text-zinc-500">Gérer la base de données patients.</p>
        </a>

    </div>
</div>