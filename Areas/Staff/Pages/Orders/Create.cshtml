@page
@model project_pharmacie.Areas.Staff.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Passer commande";
}

<div class="mx-auto max-w-3xl px-4 py-6">
    <!-- Header -->
    <div class="mb-6 flex items-start justify-between gap-3">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">Passer une commande</h1>
            <p class="text-sm text-zinc-500">Sélection fournisseur, produit et quantité.</p>
        </div>

        <div class="flex gap-2">
            <a asp-area="Staff" asp-page="/Suppliers/Index"
               class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
                ← Fournisseurs
            </a>

            <a asp-area="Staff" asp-page="/Orders/History"
               class="rounded-xl border bg-white px-4 py-2 text-sm hover:bg-zinc-50">
                Historique
            </a>
        </div>
    </div>

    <partial name="/Areas/Admin/Pages/Shared/_Flash.cshtml" />

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mb-4 rounded-2xl border border-red-200 bg-red-50 p-4 text-sm text-red-800">
            @Model.ErrorMessage
        </div>
    }

    <div class="rounded-2xl border bg-white p-5">
        <form method="post" class="space-y-5">
            <input type="hidden" asp-for="SupplierId" />

            <div>
                <label class="mb-1 block text-sm font-medium">Fournisseur</label>
                <select asp-for="Form.SupplierId"
                        class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200">
                    <option value="">-- Choisir un fournisseur --</option>
                    @foreach (var s in Model.Suppliers)
                    {
                        <option value="@s.Id">
                            @s.Name (@s.Rating.ToString("N1")/5)
                        </option>
                    }
                </select>
                <p class="mt-1 text-xs text-zinc-500">Liste triée par note (desc).</p>
                <span asp-validation-for="Form.SupplierId" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium">Produit</label>
                <select asp-for="Form.ProductId"
                        class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200">
                    <option value="">-- Choisir un produit --</option>
                    @foreach (var p in Model.Products)
                    {
                        <option value="@p.Id">
                            @p.Name (stock: @p.Stock)
                        </option>
                    }
                </select>
                <span asp-validation-for="Form.ProductId" class="text-sm text-red-600"></span>
            </div>

            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-1 block text-sm font-medium">Quantité</label>
                    <input asp-for="Form.Quantity" type="number" min="1"
                           class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
                    <span asp-validation-for="Form.Quantity" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label class="mb-1 block text-sm font-medium">Note (optionnel)</label>
                    <textarea asp-for="Form.Note" rows="2"
                              placeholder="Ex: livraison urgente, matin..."
                              class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200"></textarea>
                    <span asp-validation-for="Form.Note" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="rounded-2xl border bg-zinc-50 p-4 text-sm text-zinc-800">
                <p class="font-medium">Confirmation</p>
                <p class="mt-1 text-xs text-zinc-500">
                    Vérifie fournisseur, produit et quantité avant d’envoyer.
                </p>
            </div>

            <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
                <a asp-area="Staff" asp-page="/Products/Index"
                   class="rounded-xl px-4 py-2 text-sm text-zinc-700 hover:bg-zinc-50">
                    Voir produits
                </a>

                <button type="submit"
                        onclick="return confirm('Confirmer la création de la commande ?');"
                        class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
                    Créer commande
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}