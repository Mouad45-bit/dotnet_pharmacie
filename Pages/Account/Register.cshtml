@page
@model project_pharmacie.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="mx-auto max-w-md px-4 py-10">
    <h1 class="text-2xl font-semibold">Inscription</h1>
    <p class="text-sm text-zinc-500 mt-1">Création d’un compte Personnel</p>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @Model.ErrorMessage
        </div>
    }

    <form method="post" class="mt-6 space-y-4 rounded-2xl border bg-white p-5">
        <div>
            <label class="mb-1 block text-sm font-medium">Nom</label>
            <input asp-for="Input.Nom"
                   class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
            <span asp-validation-for="Input.Nom" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium">Login</label>
            <input asp-for="Input.Login"
                   class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
            <span asp-validation-for="Input.Login" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium">Mot de passe</label>
            <input asp-for="Input.Password" type="password"
                   class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
            <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label class="mb-1 block text-sm font-medium">Confirmer</label>
            <input asp-for="Input.ConfirmPassword" type="password"
                   class="w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-zinc-200" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-600"></span>
        </div>

        <button class="w-full rounded-xl bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800">
            Créer le compte
        </button>

        <p class="text-sm text-zinc-600">
            Déjà un compte ?
            <a class="underline" href="/Account/Login">Se connecter</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}